@startuml "Statistics Service ER Diagram"
' Статистика по постам (6 атрибутов)
entity "PostStats" as PS {
  *stat_id : int
  post_id : int
  likes_count : int
  views_count : int
  comments_count : int
  updated_at : datetime
}

' Статистика по комментариям (6 атрибутов)
entity "CommentStats" as CS {
  *stat_id : int
  comment_id : int
  likes_count : int
  dislikes_count : int
  flagged_count : int
  updated_at : datetime
}

' Статистика лайков для любых сущностей (пост/комментарий) (6 атрибутов)
entity "LikeStats" as LS {
  *stat_id : int
  target_id : int
  user_id : int
  target_type : string
  created_at : datetime
  is_valid : boolean
}
@enduml
